<html lang="en">

  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Gungun Sewing Products</title>
    <link rel="icon" type="image/x-icon" href="/img/ico/favicon.ico">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous" />
    <link rel="stylesheet" href="/css/style.css" />
    <script src="https://kit.fontawesome.com/d049c8f040.js" crossorigin="anonymous"></script>
    <style>
      .img1 {
        max-width: 100px;
      }

      .productCards {
        width: 100% !important;
        margin: auto !important;
      }

      @media only screen and (max-width: 1000px) {
        .productCardWidth {
          width: 100% !important;
        }
      }

      @media only screen and (min-width: 1000px) {
        .dropdownCat {
          display: none !important;
        }
      }

      .dropdownCat span {
        width: 100% !important;
        align-items: right;
      }
    </style>
  </head>

  <body style="background-color: white">
    <nav class="navbar navbar-expand-lg sticky-top" data-bs-theme="dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Gungun Sewing</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
          aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">

            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                aria-expanded="false">
                <i class="fa-solid fa-user"></i>
              </a>
              <ul class="dropdown-menu">
                {{#if customer}}
                  {{#with customer}}
                    <li>
                      <a href="/usr/" class="dropdown-item">
                        {{FullName}}
                      </a>
                    </li>
                  {{/with}}
                {{else}}
                  <li>
                    <a href="/sign-in" class="dropdown-item">
                      Account
                    </a>
                  </li>
                {{/if}}
                {{#if customer}}
                  <li>
                    <a href="/sign-out" class="dropdown-item">
                      Logout
                    </a>
                  </li>
                {{/if}}



              </ul>
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/cat/all">Products</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active mt-2" aria-current="page" href="/youtube"><i class="fa-brands fa-youtube fa-flip fa-xl" style="color: #f91a1a;"></i></a>
            </li>
            <li class="nav-item">
              <a class="nav-link mx-1" href="/cart"><i class="fa-sharp fa-solid fa-bag-shopping"></i></a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <!--***********************************************************Header*****************************************************************************-->


    <img src="/img/mainpage.png" class="down-to-nav">

    <div class="d-flex">
      <div class="p-2 d-none d-lg-block" style="width:30%;">
        <div class="card" style=" margin-left: 60px;">
          <div class="card-header">
            <h4>Categories</h4>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              <a href="/cat/all">All Products</a>
            </li>
            {{#each categories}}
              <li class="list-group-item">
                <a href="/cat/{{CategorySlug}}" class="catLink">{{CategoryName}}</a>
              </li>
            {{/each}}
          </ul>
        </div>
      </div>



      <div class="p-2 productCardWidth" style="width:70%">
        <section class="h-100" style="background-color: white">
          <div class="text-center container py-5">
            <h1 class="mt-4 mb-5"><strong>Products</strong></h1>
            <div class="dropdownCat">
              <span class="btn">Select Category ↓</span>
              <div class="dropdown-contentCat">
                <a href="/cat/all">All Products</a>
                {{#each categories}}
                  <a href="/cat/{{CategorySlug}}" class="catLink">{{CategoryName}}</a>
                {{/each}}
              </div>
            </div>
            <div class="row productCards">
              {{#each featProducts}}
                <div class="col-lg-4 col-md-12 mb-4">
                  <div class="card h-100">
                    <div class="bg-image hover-zoom ripple ripple-surface ripple-surface-light"
                      data-mdb-ripple-color="light">
                      <img src="/img/products/{{Image}}" alt="{{ProductName}}" class="img1" />
                    </div>
                    <div class="card-body">
                      <a href="/cat/{{CategorySlug}}/{{ProductSlug}}" class="text-reset">
                        <h5 class="card-title mb-3">{{ProductName}}</h5>
                      </a>
                      <a href="" class="text-reset">
                        <p>{{CategoryName}}</p>
                      </a>
                      <h6 class="mb-3">₹{{ProductPrice}}</h6>
                      <form action="/cart/{{ProductID}}/add" method="POST">
                        <button type="submit" class="btn btn-cart btn-default add-to-cart"><i
                            class="fa fa-shopping-cart"></i>Add to
                          cart</button>
                      </form>
                    </div>
                  </div>
                </div>
              {{/each}}
            </div>
          </div>
        </section>
      </div>
    </div>



    <!--***********************************************************footer*****************************************************************************-->
    <footer class="text-center text-black">
      <!-- Grid container -->
      <div class="container p-4 pb-0">
        <!-- Section: Social media -->
        <section class="mb-4">
          <!-- Facebook -->
          <a class="btn btn-outline-light btn-floating m-1" href="#!" role="button"><i
              class="fab fa-facebook-f"></i></a>

          <!-- Twitter -->
          <a class="btn btn-outline-light btn-floating m-1" href="#!" role="button"><i class="fab fa-twitter"></i></a>

          <!-- Google -->
          <a class="btn btn-outline-light btn-floating m-1" href="#!" role="button"><i class="fab fa-google"></i></a>

          <!-- Instagram -->
          <a class="btn btn-outline-light btn-floating m-1" href="#!" role="button"><i class="fab fa-instagram"></i></a>

          <!-- Linkedin -->
          <a class="btn btn-outline-light btn-floating m-1" href="#!" role="button"><i
              class="fab fa-linkedin-in"></i></a>

          <!-- Github -->
          <a class="btn btn-outline-light btn-floating m-1" href="#!" role="button"><i class="fab fa-github"></i></a>
        </section>
        <!-- Section: Social media -->
      </div>
      <!-- Grid container -->

      <!-- Copyright -->
      <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
        © 2023 Copyright:
        <a class="text-white" href="https://mdbootstrap.com/">Gungun Sewing</a>
      </div>
      <!-- Copyright -->
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
      crossorigin="anonymous"></script>
    
  </body>

</html>