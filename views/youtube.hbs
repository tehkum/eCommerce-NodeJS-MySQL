<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Gungun Sewing Products</title>
  <link rel="icon" type="image/x-icon" href="/img/ico/favicon.ico">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous" />
  <link rel="stylesheet" href="/css/style.css" />
  <script src="https://kit.fontawesome.com/d049c8f040.js" crossorigin="anonymous"></script>
  <style>
    .img1 {
      max-width: 100px;
    }

    .productCards {
      width: 100% !important;
      margin: auto !important;
    }

    @media only screen and (max-width: 1000px) {
      .productCardWidth {
        width: 100% !important;
      }
    }

    @media only screen and (min-width: 1000px) {
      .dropdownCat {
        display: none !important;
      }
    }

    .dropdownCat span {
      width: 100% !important;
      align-items: right;
    }

    .video-container {
      position: relative;
      padding-bottom: 56.25%;
    }

    .video-container iframe {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
    }

    .ratio {
      max-width: 500px;
      margin: auto;
    }
    h5,h1{
      text-align: center;
    }
    h1{
      width: 100%;
      background-color: aqua;
      padding: 1rem;
      margin: 20px auto;
    }
  </style>
</head>

<body>
  <nav class="navbar sticky-top navbar-expand-lg opacity-75" data-bs-theme="dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Gungun Sewing</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">

          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <i class="fa-solid fa-user"></i>
            </a>
            <ul class="dropdown-menu">
              {{#if customer}}
              {{#with customer}}
              <li>
                <a href="/usr/" class="dropdown-item">
                  {{FullName}}
                </a>
              </li>
              {{/with}}
              {{else}}
              <li>
                <a href="/sign-in" class="dropdown-item">
                  Account
                </a>
              </li>
              {{/if}}
              {{#if customer}}
              <li>
                <a href="/sign-out" class="dropdown-item">
                  Logout
                </a>
              </li>
              {{/if}}



            </ul>
          </li>
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/cat/all">Products</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/categoryProducts">Contact Us</a>
          </li>
          <li class="nav-item">
            <a class="nav-link mx-1" href="/cart"><i class="fa-sharp fa-solid fa-bag-shopping"></i></a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <!--***********************************************************Header*****************************************************************************-->
  
  <h1>Video Guide</h1>
  
  {{#if youtube}}
  {{#each youtube}}

  <div class="ratio ratio-16x9">
    <iframe src={{this.linkYoutube}} title="YouTube video" width="550" height="319"
      allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
      allowfullscreen></iframe>
  </div>
  <h5>{{this.titleYoutube}}</h5>

  <hr>
  {{/each}}
  {{/if}}

  

  <!--***********************************************************footer*****************************************************************************-->
  <footer class="text-center text-black">
    <!-- Grid container -->
    <div class="container p-4 pb-0">
      <!-- Section: Social media -->
      <section class="mb-4">
        <!-- Facebook -->
        <a class="btn btn-outline-light btn-floating m-1" href="#!" role="button"><i class="fab fa-facebook-f"></i></a>

        <!-- Twitter -->
        <a class="btn btn-outline-light btn-floating m-1" href="#!" role="button"><i class="fab fa-twitter"></i></a>

        <!-- Google -->
        <a class="btn btn-outline-light btn-floating m-1" href="#!" role="button"><i class="fab fa-google"></i></a>

        <!-- Instagram -->
        <a class="btn btn-outline-light btn-floating m-1" href="#!" role="button"><i class="fab fa-instagram"></i></a>

        <!-- Linkedin -->
        <a class="btn btn-outline-light btn-floating m-1" href="#!" role="button"><i class="fab fa-linkedin-in"></i></a>

        <!-- Github -->
        <a class="btn btn-outline-light btn-floating m-1" href="#!" role="button"><i class="fab fa-github"></i></a>
      </section>
      <!-- Section: Social media -->
    </div>
    <!-- Grid container -->

    <!-- Copyright -->
    <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
      Â© 2023 Copyright:
      <a class="text-white" href="https://mdbootstrap.com/">Gungun Sewing</a>
    </div>
    <!-- Copyright -->
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
    crossorigin="anonymous"></script>

</body>

</html>