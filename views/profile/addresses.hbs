<html lang="en">

    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>{{title}}</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
            crossorigin="anonymous" />
        <link rel="stylesheet" href="/css/style.css" />
        <script src="https://kit.fontawesome.com/d049c8f040.js" crossorigin="anonymous"></script>
        <style>
            .cardAddress {
                min-height: 100vh !important;
            }
        </style>
    </head>

    <body>
        <nav class="navbar sticky-top navbar-expand-lg opacity-75" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">Gungun Sewing</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                                aria-expanded="false">
                                <i class="fa-solid fa-user"></i>
                            </a>
                            <ul class="dropdown-menu">
                                {{#if customer}}
                                    {{#with customer}}
                                        <li>
                                            <a href="/usr/" class="dropdown-item">
                                                {{FullName}}
                                            </a>
                                        </li>
                                    {{/with}}
                                {{else}}
                                    <li>
                                        <a href="/sign-in" class="dropdown-item">
                                            Account
                                        </a>
                                    </li>
                                {{/if}}
                                {{#if customer}}
                                    <li>
                                        <a href="/sign-out" class="dropdown-item">
                                            Logout
                                        </a>
                                    </li>
                                {{/if}}



                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/cat/all">Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/categoryProducts">Contact Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link mx-1" href="/cart"><i class="fa-sharp fa-solid fa-bag-shopping"></i></a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>





        <div class="d-flex">
            <div class="p-2 d-none d-lg-block" style="width:30%;">
                <div class="card position-fixed" style="width: 20%; margin-left: 60px;">
                    <div class="card-header">
                        <h4>Featured</h4>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><a href="/usr/{{customer.Username}}">Personal
                                Info</a></li>
                        <li class="list-group-item"> <a href="/usr/{{customer.Username}}/orders">Orders</a></li>
                        <li class="list-group-item"><a href="/usr/{{customer.Username}}/addresses">Delivery
                                Addresses</a></li>
                    </ul>
                </div>
            </div>


            <div class="p-2 productCardWidth" style="width:70%">

                <div class="adminPanelDropdown" style="margin-bottom: 10px;">
                    <p>
                        <button class="btn mb-10" type="button" data-bs-toggle="collapse"
                            data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                            Featured â†“
                        </button>
                    </p>
                    <div class="collapse" id="collapseExample">
                        <div class="card card-body">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item"><a href="/usr/{{customer.Username}}">Personal
                                        Info</a></li>
                                <li class="list-group-item"> <a href="/usr/{{customer.Username}}/orders">Orders</a></li>
                                <li class="list-group-item"><a href="/usr/{{customer.Username}}/addresses">Delivery
                                        Addresses</a></li>
                            </ul>
                        </div>
                    </div>
                </div>


                <div class="card cardAddress">
                    <div class="card-body">
                        <h1 class="card-title">Addresses</h1>
                        <img src="/img/addresses.svg" alt="Image" class="img-fluid">
                        <section>
                            <div class="row">
                                <div class="features_items">
                                    {{#each addresses}}
                                        <div class="row">

                                            <div class="table-responsive">
                                                <table class="table table-condensed">

                                                    <tbody>
                                                        <tr>
                                                            <td>#</td>
                                                            <td>{{this.StreetAddress}}, {{this.PostCode}},
                                                                {{this.City}}, {{this.Country}}
                                                            </td>
                                                            <td>
                                                                <form class="dev-form"
                                                                    action="/usr/{{../customer.Username}}/addresses/{{AddressID}}/edit"
                                                                    method="GET">
                                                                    <button class="btn btn-default" type="submit">
                                                                        <i class="fa fa-edit"></i>
                                                                        Edit
                                                                    </button>
                                                                </form>

                                                                <form class="dev-form"
                                                                    action="/usr/{{../customer.Username}}/addresses/{{AddressID}}/delete"
                                                                    method="POST">
                                                                    <button class="btn btn-default" type="submit">
                                                                        <i class="fa fa-trash-o"></i>
                                                                        Delete
                                                                    </button>
                                                                </form>
                                                            </td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    {{/each}}


                                    <form action="/usr/{{customer.Username}}/addresses/add" method="GET">
                                        <button class="btn btn-default" type="submit">
                                            <i class="fa fa-plus"></i> Add new address
                                        </button>
                                    </form>
                                    <br>
                                    <br>
                                </div>
                            </div>

                        </section>
                    </div>
                </div>

            </div>
        </div>



        <!--***********************************************************footer*****************************************************************************-->
        <footer class="text-center text-black">
            <!-- Grid container -->
            <div class="container p-4 pb-0">
                <!-- Section: Social media -->
                <section class="mb-4">
                    <!-- Facebook -->
                    <a class="btn btn-outline-light btn-floating m-1" href="#!" role="button"><i
                            class="fab fa-facebook-f"></i></a>

                    <!-- Twitter -->
                    <a class="btn btn-outline-light btn-floating m-1" href="#!" role="button"><i
                            class="fab fa-twitter"></i></a>

                    <!-- Google -->
                    <a class="btn btn-outline-light btn-floating m-1" href="#!" role="button"><i
                            class="fab fa-google"></i></a>

                    <!-- Instagram -->
                    <a class="btn btn-outline-light btn-floating m-1" href="#!" role="button"><i
                            class="fab fa-instagram"></i></a>

                    <!-- Linkedin -->
                    <a class="btn btn-outline-light btn-floating m-1" href="#!" role="button"><i
                            class="fab fa-linkedin-in"></i></a>

                    <!-- Github -->
                    <a class="btn btn-outline-light btn-floating m-1" href="#!" role="button"><i
                            class="fab fa-github"></i></a>
                </section>
                <!-- Section: Social media -->
            </div>
            <!-- Grid container -->

            <!-- Copyright -->
            <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
                Â© 2023 Copyright:
                <a class="text-white" href="https://mdbootstrap.com/">Gungun Sewing</a>
            </div>
            <!-- Copyright -->
        </footer>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
            crossorigin="anonymous"></script>
    </body>

</html>